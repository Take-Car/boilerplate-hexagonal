{
  "files": ["src/index.ts"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": false,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types", "@types"],
    "rootDirs": [
      "./src",
      "./node_modules"
    ]
  }
}